@model FrontVentasUsuarioFinal.Models.CotizacionViewModel



<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ActualizarCotizacion</title>
</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

    <div class="container">

        <div class="row"><label>&nbsp; </label></div>
        <h2 style="text-align: center">Cotización</h2>
        <div class="row"><label>&nbsp; </label></div>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="row">

            <div class="form-group col-md-4">
                @Html.LabelFor(model => model.Fecha, htmlAttributes: new { @class = "control-label col-md-3" })

                @Html.EditorFor(model => model.Fecha, new { htmlAttributes = new { @class = "form-control col-md-1", @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.Fecha, "", new { @class = "text-danger" })

            </div>

            <div class="form-group col-md-4">
                @Html.LabelFor(model => model.IdEstatus, htmlAttributes: new { @class = "control-label col-md-3" })

                @Html.DropDownListFor(model => model.IdEstatus, new SelectList(ViewBag.ListaEstatus, "IdEstatus", "NombreEstatus"), "Selecciona una opción", new { @class = "form-control col-md-1" })
                @Html.ValidationMessageFor(model => model.IdEstatus, "", new { @class = "text-danger" })

            </div>

            <div class="form-group col-md-4">

                @Html.LabelFor(model => model.MotivoRechazo, htmlAttributes: new { @class = "control-label " })

                @Html.EditorFor(model => model.MotivoRechazo, new { htmlAttributes = new { @class = "form-control col-md-1" } })
                @Html.ValidationMessageFor(model => model.MotivoRechazo, "", new { @class = "text-danger" })

            </div>


        </div>

        <div class="row">

            <div class="form-group col-md-4">
                @Html.LabelFor(model => model.Sucursal, htmlAttributes: new { @class = "control-label col-md-3" })

                @Html.EditorFor(model => model.Sucursal, new { htmlAttributes = new { @class = "form-control col-md-1", @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.Sucursal, "", new { @class = "text-danger" })

            </div>


            <div class="form-group col-md-4">
                @Html.LabelFor(model => model.DescripcionCotizacion, htmlAttributes: new { @class = "control-label col-md-3" })

                @Html.EditorFor(model => model.DescripcionCotizacion, new { htmlAttributes = new { @class = "form-control col-md-1", @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.DescripcionCotizacion, "", new { @class = "text-danger" })

            </div>


            <div class="form-group col-md-4">
                @Html.LabelFor(model => model.Cliente, htmlAttributes: new { @class = "control-label col-md-3" })

                @Html.EditorFor(model => model.Cliente, new { htmlAttributes = new { @class = "form-control col-md-1", @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.Cliente, "", new { @class = "text-danger" })
            </div>

        </div>


        <div class="row">

            <div class="form-group col-md-4">
                @Html.LabelFor(model => model.Importe, htmlAttributes: new { @class = "control-label col-md-3" })

                @Html.EditorFor(model => model.Importe, new { htmlAttributes = new { @class = "form-control col-md-1", @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.Importe, "", new { @class = "text-danger" })

            </div>

            <div class="form-group col-md-4">
                @Html.LabelFor(model => model.Observaciones, htmlAttributes: new { @class = "control-label col-md-3" })

                @Html.TextAreaFor(model => model.Observaciones, new { @class = "form-control ", @cols = 30, @rows = 3 })
                @Html.ValidationMessageFor(model => model.Observaciones, "", new { @class = "text-danger" })

            </div>


        </div>

        <div class="form-group col-md-4">
       

            @Html.HiddenFor(model => model.IdCotizacion, new { htmlAttributes = new { @class = "form-control col-md-1" } })
            @Html.ValidationMessageFor(model => model.IdCotizacion, "", new { @class = "text-danger" })

        </div>


        <div class="row">

            <div class="form-group col-md-5">

            </div>

            <div class="form-group col-md-3">

                <input type="submit" value="Actualizar" class="btn btn-success col-md-4" />

            </div>

            <div class="form-group col-md-4">

            </div>

        </div>


    </div>
    }
</body>
</html>
